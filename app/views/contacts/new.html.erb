<%= simple_form_for @contact do |f| %>
  <%= f.input :name, placeholder: 'Jean', label: "Nom" %>
  <%= f.input :email, placeholder: 'Jeandupont@example.com', label: "Email" %>
  <%= f.input :object, placeholder: 'Saisissez votre objet', label: "Objet" %>
  <%= f.input :message, placeholder: 'Laissez votre message ici', label: "Message" %>
  <%= f.submit "Envoyer", class: "btn-send"%>
<% end %>

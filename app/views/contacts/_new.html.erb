<div class="form-contact">
  <%= simple_form_for locale do |f| %>
    <%= f.input :name, placeholder: 'Nom', label: false %>
    <%= f.input :email, placeholder: 'Email', label: false %>
    <%= f.input :phone, placeholder: 'Téléphone', label: false %>
    <%= f.input :message, placeholder: 'Message', label: false %>
    <div class="btn-form">
      <%= f.submit "Envoyer", class: "btn-send" %>
    </div>
  <% end %>
</div>
